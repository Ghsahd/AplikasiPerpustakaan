<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment.TambahBukuRusakFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="67dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="30dp">
            <EditText
                android:id="@+id/editTextKodeBuku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kode Buku"
                android:maxLength="6"
                android:minHeight="48dp"
                android:minWidth="48dp"/>
            <EditText
                android:id="@+id/editTextStokAwal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Stok Awal"
                android:minHeight="48dp"
                android:minWidth="48dp"/>
            <EditText
                android:id="@+id/editTextJumlahRusak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jumlah Rusak"
                android:minHeight="48dp"
                android:minWidth="48dp"/>
            <EditText
                android:id="@+id/editTextKeterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Keterangan"
                android:minHeight="48dp"
                android:minWidth="48dp"/>
            <Button
                android:id="@+id/buttonTambahBukuRusak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
